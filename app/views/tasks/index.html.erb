<h1>タスク一覧</h1>

<table>
  <tr>
    <th>ID</th>
    <th>タスク名</th>
    <th>タスクの説明</th>
  </tr>
  <% @tasks.each do |tasks| %>
  <tr>
    <td><%= tasks.id %></td>
    <td><%= tasks.name %></td>
    <td><%= tasks.description %></td>
    <td><%= link_to  "詳細", tasks %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to  "新規作成", new_task_path %></p>
